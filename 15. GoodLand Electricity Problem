#include <bits/stdc++.h>
using namespace std;

int pylons(int k, vector<int> arr) {
    int n = arr.size();
    int count = 0;
    int i = 0;
    while(i < n) {
        int plant = -1;
        int start = max(0, i - k + 1);
        int end = min(n - 1, i + k - 1);
        for(int j = end; j >= start; j--) {
            if(arr[j] == 1) {
                plant = j;
                break;
            }
        }
        if(plant == -1) return -1;
        count++;
        i = plant + k;
    }
    return count;
}

int main() {
    int n, k;
    cin >> n >> k;
    vector<int> arr(n);
    for(int i = 0; i < n; i++) cin >> arr[i];
    cout << pylons(k, arr) << "\n";
    return 0;
}
