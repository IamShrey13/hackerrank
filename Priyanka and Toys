#include <bits/stdc++.h>

using namespace std;

int toys(vector<int> w) {
    sort(w.begin(), w.end());
    int containers = 0;
    int i = 0;
    int n = w.size();

    while (i < n) {
        int limit = w[i] + 4;
        containers++;
        while (i < n && w[i] <= limit) {
            i++;
        }
    }

    return containers;
}

int main() {
    int n;
    cin >> n;
    vector<int> w(n);
    for (int i = 0; i < n; i++) {
        cin >> w[i];
    }

    int result = toys(w);
    cout << result << "\n";
    return 0;
}
