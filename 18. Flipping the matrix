#include <bits/stdc++.h>
using namespace std;

int flippingMatrix(vector<vector<int>> matrix) {
    int n = matrix.size() / 2;
    int sum = 0;
    for(int i = 0; i < n; i++) {
        for(int j = 0; j < n; j++) {
            int val = max({matrix[i][j], matrix[i][2*n-1-j], matrix[2*n-1-i][j], matrix[2*n-1-i][2*n-1-j]});
            sum += val;
        }
    }
    return sum;
}

int main() {
    int q;
    cin >> q;
    while(q--) {
        int n;
        cin >> n;
        vector<vector<int>> matrix(2*n, vector<int>(2*n));
        for(int i = 0; i < 2*n; i++)
            for(int j = 0; j < 2*n; j++)
                cin >> matrix[i][j];
        cout << flippingMatrix(matrix) << "\n";
    }
    return 0;
}
